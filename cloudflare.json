{
    "description": "Monetize your content without compromising your site design or user experience with Prosperent ProsperLinks. Once turned on, ProsperLinks will automatically evaluate your on-page content and convert product references to affiliated links that earn you revenue with every sale.",
    "keywords": ["affiliate links"],
    "main": "public/javascripts/plink.js",
    "name": "ProsperLinks",
    "repository": {
        "type": "git",
        "url": "https://github.com/prosperent/ProsperLinks-App.git"
    },
    "version": "0.0.10",
    "account": {
        "callback_url": "http://prosperent.com/cf/",
        "user_fields": ["email"]
    },
    "config":{
        "assets":{
            "logos": {
                "132px": "./public/images/logo-132.png",
                "200px": "./public/images/logo-200.png"
            },
            "detail_page": [
                "./public/images/plink-example.png",
                "./public/images/analytics.png"
            ]
        },
        "details":{
            "Category": "Content Monetization",
            "Language": "English",
            "Price": "Free to install. 70% of revenue paid to website owner.",
            "Restrictions": "Website owners from all countries are welcome, however it should be known: ads are served from US advertisers and are in English.<br><br>According to the FTC's 16 CFR &sect; 255.5, you are required to disclose your use of revenue generating links to your readers. Read more details <a href='http://prosperent.com/policies/ftc' target='_blank'>here</a>.",
            "Prosperent": "<a href='http://prosperent.com/terms' target='_blank'>Terms and Conditions</a>"
        },
        "interface": [
            {
                "id": "pl_underline",
                "type": "select",
                "name": "Link Underline",
                "description": "Choose the type of underline the affiliated links will have.",
                "options": [
                    {
                        "label": "Single Underline",
                        "value": 1,
                        "selected": true
                    },
                    {
                        "label": "Double Underline",
                        "value": 2
                    },
                    {
                        "label": "None",
                        "value": "none"
                    }
                ]
            },
            {
                "id": "pl_hoverBox",
                "type": "select",
                "name": "Hover Box",
                "description": "Choose whether the affiliated links utilize a product description hover box.",
                "options": [
                    {
                        "label": "On",
                        "value": 1
                    },
                    {
                        "label": "Off",
                        "value": 0,
                        "selected": true
                    }
                ]
            },
            {
                "id": "pl_limit",
                "type": "select",
                "name": "Link Limit",
                "description": "Set the maximum number of ProsperLinks to create on any given page.",
                "options": [
                    {
                        "label": "1",
                        "value": 1
                    },
                    {
                        "label": "2",
                        "value": 2
                    },
                    {
                        "label": "3",
                        "value": 3
                    },
                    {
                        "label": "4",
                        "value": 4
                    },
                    {
                        "label": "5",
                        "value": 5,
                        "selected": true
                    },
                    {
                        "label": "6",
                        "value": 6
                    },
                    {
                        "label": "7",
                        "value": 7
                    },
                    {
                        "label": "8",
                        "value": 8
                    },
                    {
                        "label": "9",
                        "value": 9
                    },
                    {
                        "label": "10",
                        "value": 10
                    }
                ]
            },
            {
                "id": "pl_enableLinkAffiliation",
                "type": "select",
                "name": "Link Affiliation",
                "description": "Choose whether to automatically convert links to external merchants to affiliated links.",
                "options": [
                    {
                        "label": "On",
                        "value": 1,
                        "selected": true
                    },
                    {
                        "label": "Off",
                        "value": 0
                    }
                ]
            }
        ]
    }
}
